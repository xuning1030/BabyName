<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/_e8e7e5"
        />
    <ImageView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/banner"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/money1"
            android:layout_margin="16dp"
            android:padding="10dp"
            android:background="@drawable/check_yuanjianbiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8.8元"
            />

        <TextView
            android:id="@+id/money2"
            android:layout_margin="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/yuanjiaobian"
            android:layout_weight="1"
            android:gravity="center"
            android:text="18.8元"
            />

        <TextView
            android:id="@+id/money3"
            android:layout_margin="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/yuanjiaobian"
            android:layout_weight="1"
            android:gravity="center"
            android:text="188.8元"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/je"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:singleLine="true"
        android:numeric="integer"
        android:hint="请输入其他金额(以分为单元)"
        android:textColorHint="@color/_bfbfbf"
        android:gravity="center"
        android:background="@drawable/yuanjiaobian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/zfb"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:onClick="onClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yuanjiaobian2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zfb"
            />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_ffffff"
            android:text="支付宝支付"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/wx"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:onClick="onClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yuanjiaobian3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wxzf"
            />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_ffffff"
            android:text="微信支付"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有"
            />

        <TextView
            android:id="@+id/set_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_da251d"
            android:text="158266"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人打赏"
            />

    </LinearLayout>

    <View
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/_c7beb5"
        />

    <ListView
        android:id="@+id/lv2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:divider="#00000000">
    </ListView>

</LinearLayout>