<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="支付结果页"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/_ffffff"
        android:textSize="18sp"
        android:background="@color/_81694f"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/rw_spacing_size_12"
        android:layout_marginRight="@dimen/rw_spacing_size_12"
        android:background="@drawable/yuanjiaobian"
        android:layout_marginTop="@dimen/rw_spacing_size_12"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pay_top_tv"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/rw_spacing_size_16"
            android:textColor="#b91c24"
            android:layout_marginTop="@dimen/rw_spacing_size_16"
            android:text="当前订单消耗时间：0秒"
            />

        <TextView
            android:id="@+id/pay_order_tv"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#b91c24"
            android:layout_marginTop="@dimen/rw_spacing_size_14"
            android:text="订单号:"
            />
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/rw_spacing_size_14"
            android:textColor="#b91c24"
            android:layout_marginTop="@dimen/rw_spacing_size_16"
            android:text="金额：29.9元"
            />



        <TextView
            android:id="@+id/pay_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/_333333"
            android:layout_marginLeft="@dimen/rw_spacing_size_12"
            android:layout_marginRight="@dimen/rw_spacing_size_12"
            android:layout_marginTop="@dimen/rw_spacing_size_16"
            android:layout_marginBottom="@dimen/rw_spacing_size_12"
            android:text="      您的订单已生成，后台正在处理中，请稍等，后台已处理时间：0秒"
            />

        <LinearLayout
            android:id="@+id/pay_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/rw_spacing_size_16"
            android:layout_marginLeft="@dimen/rw_spacing_size_12"
            android:layout_marginRight="@dimen/rw_spacing_size_12"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/_333333"
                android:textSize="@dimen/rw_spacing_size_16"
                android:text="您也可以直接联系我们！"
                />

            <TextView
                android:id="@+id/pay_qq_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/_b91c24"
                android:layout_marginTop="@dimen/rw_spacing_size_15"
                android:textSize="@dimen/rw_spacing_size_16"
                android:text="QQ:3282726464"
                />
            <TextView
                android:id="@+id/pay_phone_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/_b91c24"
                android:layout_marginTop="@dimen/rw_spacing_size_15"
                android:textSize="@dimen/rw_spacing_size_16"
                android:text="电话：17196338071"
                />
            </LinearLayout>



        </LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#808080"
        android:layout_marginLeft="@dimen/rw_spacing_size_12"
        android:layout_marginRight="@dimen/rw_spacing_size_12"
        android:layout_marginTop="@dimen/rw_spacing_size_16"
        android:text="请手动选择订单支付状态！"
        />

    <Button
        android:id="@+id/wait_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/rw_spacing_size_10"
        android:layout_marginLeft="@dimen/rw_spacing_size_12"
        android:layout_marginRight="@dimen/rw_spacing_size_12"
        android:background="@drawable/order_line_back"
        android:textColor="@color/_ffffff"
        android:text="未付款（返回上一页）"/>

    <Button
        android:id="@+id/pay_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/rw_spacing_size_16"
        android:layout_marginLeft="@dimen/rw_spacing_size_12"
        android:layout_marginRight="@dimen/rw_spacing_size_12"
        android:background="@drawable/order_back_btn"
        android:textColor="@color/_ffffff"
        android:text="已付款"/>


</LinearLayout>
