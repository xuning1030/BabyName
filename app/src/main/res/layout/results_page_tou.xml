<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@mipmap/zsbk">

        <TextView
            android:id="@+id/name"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_333333"
            android:gravity="center"
            android:text="徐思雨"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_333333"
            android:textSize="12dp"
            android:gravity="center"
            android:text="综合得分"
            />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/_da251d"
            android:gravity="center"
            android:textSize="40dp"
            android:text="99"
            />

        <TextView
            android:id="@+id/wenhua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文化占比40%"
            />


        <TextView
            android:id="@+id/bazi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="八字占比30%"
            />


        <TextView
            android:id="@+id/shengxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生肖五格卦象各占比10%"
            />


    </LinearLayout>

<View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/_e8e7e5"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_c7beb5"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:text="三才五格分析"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/left_01" />
    </LinearLayout>


<TextView
        android:id="@+id/wuge"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="『徐思雨』  天格:11  地格:12  人格:23  总格:31\n外格:9  三才:木火木"
        />

    <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/_e8e7e5"
        android:id="@+id/view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_c7beb5"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:text="名字总评分析"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/left_01" />
    </LinearLayout>


</LinearLayout>