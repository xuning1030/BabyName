<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/title_layout"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/_fcfbf9"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/order_payments" />



       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="12dp"
           android:gravity="center">

           <TextView
               android:id="@+id/Ordernumber"
               android:layout_weight="10"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:paddingTop="12dp"
               android:paddingLeft="4dp"
               android:paddingBottom="@dimen/dp12"
               android:background="@drawable/yuanjiaobian4"
               android:text="订单号：CB17062809304055164"
               />

           <TextView
               android:id="@+id/copy"
               android:layout_weight="3"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:background="@color/_b7a99a"
               android:onClick="onClick"
               android:textColor="@color/_ffffff"
               android:gravity="center"
               android:text="复制"
               />

       </LinearLayout>

        <TextView
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/_fe3955"
            android:gravity="center"
            android:text="复制保存您的订单号一边下次查看"
            />

        <babyname.babyname.widget.AutoRefreshListView
            android:id="@+id/listview3"
            android:background="@color/_eae6e3"
            android:divider="#00000000"
            android:layout_width="match_parent"
            android:layout_height="400dp">
        </babyname.babyname.widget.AutoRefreshListView>

    </LinearLayout>
</LinearLayout>