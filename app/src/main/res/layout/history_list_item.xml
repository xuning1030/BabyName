<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/_ffffff"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/rw_spacing_size_1"
        android:layout_marginLeft="@dimen/rw_spacing_size_12"
        android:layout_marginRight="@dimen/rw_spacing_size_12"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableRow
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
               android:layout_height="@dimen/rw_spacing_size_25"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/name_back"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_333333"
                    android:textSize="@dimen/rw_spacing_size_12"
                    android:layout_marginLeft="@dimen/rw_spacing_size_12"
                    android:text="姓氏："/>
                </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="@dimen/rw_spacing_size_25"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/home_born_data"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_333333"
                    android:textSize="@dimen/rw_spacing_size_12"
                    android:layout_marginLeft="@dimen/rw_spacing_size_12"
                    android:text="订单号："/>
            </TableRow>>
            </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/history_item_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/rw_spacing_size_25"

                android:textColor="@color/_333333"
                android:textSize="@dimen/rw_spacing_size_12"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/history_item_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/rw_spacing_size_25"
                android:textColor="@color/_333333"
                android:textSize="@dimen/rw_spacing_size_12"
                android:gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/home_return_back"
                />
        </LinearLayout>
        </LinearLayout>

</LinearLayout>
