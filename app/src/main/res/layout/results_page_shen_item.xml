<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_margin="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@mipmap/tzg">

            <TextView
                android:id="@+id/tv1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/_333333"
                android:textSize="100dp"
                android:text="徐"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_333333"
                android:text="拼音:xu"
                />

            <TextView
                android:id="@+id/tv3"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_333333"
                android:text="五行:金"
                />

            <TextView
                android:id="@+id/tv4"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_333333"
                android:text="繁体:徐"
                />

            <TextView
                android:id="@+id/tv5"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_333333"
                android:text="简体笔画:8"
                />

            <TextView
                android:id="@+id/tv6"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_333333"
                android:text="康熙笔画:13"
                />



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv7"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/_333333"
                android:text="五笔98：YFFY"
                />

            <TextView
                android:id="@+id/tv8"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/_333333"
                android:text="仓颉：IVGDI"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv9"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/_333333"
                android:text="四角号码：34741"
                />

            <TextView
                android:id="@+id/tv10"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/_333333"
                android:text="Unicode：U+8BD7"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv11"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/_333333"
        android:text="规范汉字编号：1288"/>

    <TextView
        android:id="@+id/tv12"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/_333333"
        android:text="字意：多才贤能，如诗如画。意为美好。"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/_808080"
        android:text="(此字在人名库中共出现约：142350次)"
        />

    <View
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:background="@color/_50808080"
        android:layout_height="1dp" />

</LinearLayout>